<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="140dp" android:background="@color/colorWhite" android:layout_margin="6dp" app:cardCornerRadius="4dp">
    <LinearLayout android:id="@+id/llContent" android:layout_width="match_parent" android:layout_height="140dp" android:orientation="horizontal" android:background="@color/colorWhite" android:weightSum="12">
        <ImageView android:id="@+id/imgRestaurantImage" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="3.5" android:src="@mipmap/ic_launcher" android:scaleType="centerCrop" android:layout_gravity="center_vertical" android:padding="3dp"/>
        <RelativeLayout android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="6.5">
            <TextView android:id="@+id/txtRestaurantName" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Name of the Restaurant" android:padding="8dp" android:textSize="18sp" android:textStyle="bold" android:textColor="@color/colorAccent"/>
        </RelativeLayout>
        <RelativeLayout android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="2">
            <ImageView android:id="@+id/imgFavorite" android:layout_width="30dp" android:layout_height="30dp" android:background="@drawable/ic_no_fav" android:layout_centerInParent="true"/>
            <TextView android:id="@+id/txtRestaurantRating" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true" android:padding="4dp" android:text="4.5" android:textSize="18sp" android:textColor="#FFC828" android:drawableStart="@drawable/ic_rating" android:drawablePadding="4dp"/>
        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>